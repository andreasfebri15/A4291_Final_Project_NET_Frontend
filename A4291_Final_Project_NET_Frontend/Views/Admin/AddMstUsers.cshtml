@{
    Layout = "_layout_Admin";
}

<h3 class="mt-3">User Management</h3>

<div class="row mb-3">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-12">
                            <form>
                                <div class="mb-3 row">
                                    <label for="html5-text-input" class="col-md-2 col-form-label">Name</label>
                                    <div class="col-md-3">
                                    <input class="form-control" type="text" id="userName" name="name"
                                            required />
                                    </div>
                                   
                                </div>
                            <div class="mb-3 row">
                            <label for="html5-text-input" class="col-md-2 col-form-label">Role</label>
                            <div class="col-md-3">
                                    <input class="form-control" type="text" id="userRole"
                                           name="userRole" required />
                            </div>
                            </div>

                                <div class="mb-3 row">
                                <label for="html5-text-input" class="col-md-2 col-form-label">Balance</label>
                                <div class="col-md-2">
                                    <input class="form-control" type="text" id="role"
                                           name="userR" required />
                                </div>
                                </div>
                                <div class="row mb-3">
                                    <div class="col-12">

                                    <button class="btn btn-primary btn-md float-end" onclick="Register()" type="button">Simpan</button>
                                    <a class="btn btn-secondary" asp-area="" asp-controller="Admin" asp-action="MstUsers" >Kembali</a>
                                    </div>
                                </div>
                            </form>
                        <div id="message"></div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
<script src="~/js/Login.js"></script>
