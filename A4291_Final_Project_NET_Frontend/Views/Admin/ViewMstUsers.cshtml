@{
    Layout = "_layout_Admin";
}
    <div class="row mb-3">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <div class="row mb-3">
                     
                        <div class="col-12">
                        <form id="editUserForm">
                           
                            <div class="mb-3 row">
                                <label for="userName" class="col-md-2 col-form-label">Name</label>
                                <div class="col-md-3">
                                    <input class="form-control" type="text" id="userName" name="userName"
                                           required />
                                </div>

                            </div>
                            <div class="form-group">
                                <label for="userRole">Role</label>
                                <select class="form-control col-md-2" id="userRole" required>
                                    <option value="lender">Lender</option>
                                    <option value="borrower">Borrower</option>
                                </select>
                            </div>

                            <div class="mb-3 row">
                                <label for="userBalance" class="col-md-2 col-form-label">Balance</label>
                                <div class="col-md-2">
                                    <input class="form-control" type="text" id="userBalance"
                                           name="userBalance" required />
                                </div>
                            </div>
                            <input type="hidden" id="userId">
                            <div class="row mb-3">
                                <div class="col-12">

                                    <button class="btn btn-primary btn-md float-end" onclick="updateUser()" type="submit">Simpan</button>
                                    <a class="btn btn-secondary" asp-area="" asp-controller="Admin" asp-action="MstUsers">Kembali</a>
                                </div>
                            </div>
                        </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
<script src="~/js/MstUsers.js"></script>